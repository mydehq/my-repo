#!/bin/bash
#
#  ____        _ _     _           
# | __ ) _   _(_) | __| | ___ _ __ 
# |  _ \| | | | | |/ _` |/ _ \ '__|
# | |_) | |_| | | | (_| |  __/ |   
# |____/ \__,_|_|_|\__,_|\___|_|
#
# Builds AUR packages declaratively from packages.yml
#

set -euo pipefail

# Configuration
REPO_NAME="mydehq"
PACKAGES_FILE="packages.yml"
BUILD_DIR="build"
ARCH="x86_64"
AUR_BASE_URL="https://aur.archlinux.org"
AUR_CLONE_DIR="aur"

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Logging functions (MyTM style)
log-info()    { echo -e "${BLUE}i ${NC} $*"; }
log-success() { echo -e "${GREEN}+ ${NC} $*"; }
log-warn()    { echo -e "${YELLOW}! ${NC} $*"; }
log-error()   { echo -e "${RED}x ${NC} $*" >&2; }

# Extract and install build dependencies
install-pkg-deps() {
    local pkg_dir="$1"
    local pkgbuild="${pkg_dir}/PKGBUILD"
    
    log-info "Installing build dependencies from PKGBUILD..."
    
    local makedeps
    makedeps=$(bash -c "source $pkgbuild && echo \${makedepends[@]}" | xargs)
    
    if [[ -n "$makedeps" ]]; then
        log-info "Installing build dependencies: $makedeps"
        if ! sudo pacman -S --noconfirm --needed $makedeps; then
            log-error "Failed to install build dependencies for $(basename "$pkg_dir")"
            return 1
        fi
    fi
}

# Get version of package from repo database
get-repo-version() {
    local pkg_name="$1"
    local db_file="${BUILD_DIR}/${ARCH}/${REPO_NAME}.db.tar.gz"
    
    if [[ ! -f "$db_file" ]]; then
        echo ""
        return
    fi
    
    # Extract version from repo database
    local version
    version=$(tar -tzf "$db_file" 2>/dev/null | grep "^${pkg_name}-[^/]*/desc$" | head -1 | sed "s|^${pkg_name}-\(.*\)/desc$|\1|") || true
    echo "$version"
}

# Get version from AUR PKGBUILD
get-aur-version() {
    local pkg_dir="$1"
    local pkgbuild="${pkg_dir}/PKGBUILD"
    
    if [[ ! -f "$pkgbuild" ]]; then
        echo ""
        return
    fi
    
    # Source PKGBUILD in subshell to get version info
    (
        # shellcheck disable=SC1090
        source "$pkgbuild"
        if [[ -n "${epoch:-}" ]]; then
            echo "${epoch}:${pkgver}-${pkgrel}"
        else
            echo "${pkgver}-${pkgrel}"
        fi
    )
}


# Clone or update AUR package
clone-aur-package() {
    local pkg_name="$1"
    local pkg_dir="${AUR_CLONE_DIR}/${pkg_name}"
    
    if [[ -d "$pkg_dir" ]]; then
        log-info "Updating existing clone: ${pkg_name}"
        git -C "$pkg_dir" pull --quiet
    else
        log-info "Cloning from AUR: ${pkg_name}"
        git clone --quiet "${AUR_BASE_URL}/${pkg_name}.git" "$pkg_dir"
    fi
    
    if [[ ! -f "${pkg_dir}/PKGBUILD" ]]; then
        log-error "No PKGBUILD found for ${pkg_name}"
        return 1
    fi
}


# Build package using makepkg
build-package() {
    local pkg_name="$1"
    local pkg_dir="${AUR_CLONE_DIR}/${pkg_name}"
    
    log-info "Building ${pkg_name}..."
    
    pushd "$pkg_dir" > /dev/null
    
    # Install dependencies manually
    install-pkg-deps "."
    
    # Build package
    if ! makepkg --noconfirm --nodeps --force; then
        log-error "Build failed for ${pkg_name}"
        popd > /dev/null
        return 1
    fi
    
    popd > /dev/null
    
    # Copy built packages to build directory
    local pkg_files
    pkg_files=$(find "$pkg_dir" -maxdepth 1 -name "*.pkg.tar.zst" -o -name "*.pkg.tar.xz" 2>/dev/null)
    
    if [[ -z "$pkg_files" ]]; then
        log-error "No package files found after build for ${pkg_name}"
        return 1
    fi
    
    for pkg_file in $pkg_files; do
        cp "$pkg_file" "${BUILD_DIR}/${ARCH}/"
        log-success "Copied $(basename "$pkg_file") to ${BUILD_DIR}/${ARCH}/"
        
        # Cleanup artifact to keep cache clean
        rm -f "$pkg_file"
        log-info "Removed artifact from cache: $(basename "$pkg_file")"
    done
}

# Add packages to repo database
update-repo-database() {
    local build_arch_dir="${BUILD_DIR}/${ARCH}"
    local db_file="${REPO_NAME}.db.tar.gz"
    
    log-info "Updating repository database..."
    
    pushd "$build_arch_dir" > /dev/null
    
    # Add all packages to the database
    for pkg in *.pkg.tar.zst *.pkg.tar.xz; do
        [[ -f "$pkg" ]] || continue
        repo-add "$db_file" "$pkg"
    done
    
    rm -f *.old
    
    popd > /dev/null
    
    log-success "Repository database updated"
}


# Generate a static landing page
generate-landing-page() {
    local template="src/index.html"
    local output="${BUILD_DIR}/index.html"
    
    if [[ ! -f "$template" ]]; then
        log-warn "Landing page template not found: $template. Skipping generation."
        return
    fi
    
    echo ""
    log-info "Generating static landing page..."
    
    local package_rows=""
    local pkg_count
    pkg_count=$(yq '.packages | length' "$PACKAGES_FILE")
    
    for ((i=0; i<pkg_count; i++)); do
        local pkg_name pkg_version
        pkg_name=$(yq ".packages[$i].name" "$PACKAGES_FILE")
        pkg_version=$(get-repo-version "$pkg_name")
        
        # If version not found in repo, skip from landing page
        [[ -z "$pkg_version" ]] && continue
        
        # Build individual row
        package_rows+="<tr>"
        package_rows+="<td class='ps-3'><span class='package-name text-mauve'>${pkg_name}</span></td>"
        package_rows+="<td class='text-center'><span class='badge rounded-pill badge-version'>${pkg_version}</span></td>"
        package_rows+="<td class='text-end pe-3 text-secondary'>${ARCH}</td>"
        package_rows+="</tr>"
    done
    
    # Read template and replace placeholders
    local content
    content=$(<"$template")
    content="${content//\{\{REPO_NAME\}\}/$REPO_NAME}"
    
    # Inject Timestamp
    content="${content//\{\{LAST_UPDATED\}\}/$(date -Iminutes)}"
    content="${content//\{\{PACKAGE_COUNT\}\}/$pkg_count}"
    content="${content//\{\{PACKAGE_ROWS\}\}/$package_rows}"
    
    # Only update if content changed (ignoring the timestamp line)
    if [[ -f "$output" ]]; then
        echo "$content" > "${output}.tmp"
        
        if diff -q -I 'id="last-updated"' "$output" "${output}.tmp" >/dev/null; then
            log-info "Landing page content unchanged (ignoring timestamp). Skipping update."
            rm "${output}.tmp"
        else
            mv "${output}.tmp" "$output"
            log-success "Landing page updated at ${output}"
        fi
    else
        echo "$content" > "$output"
        log-success "Landing page generated at ${output}"
    fi
    
    # Copy icon if exists
    if [[ -f "src/icon.png" ]]; then
        if [[ ! -f "$BUILD_DIR/icon.png" ]] || ! cmp -s "src/icon.png" "$BUILD_DIR/icon.png"; then
            cp "src/icon.png" "$BUILD_DIR/"
            log-success "Copied icon.png to build directory"
        fi
    fi
    
    # Generate Repository README
    if [[ -f "src/repo-README.md" ]]; then
        local readme_out="$BUILD_DIR/README.md"
        if [[ ! -f "$readme_out" ]] || ! cmp -s "src/repo-README.md" "$readme_out"; then
            cp "src/repo-README.md" "$readme_out"
            log-success "Repository README updated at $readme_out"
        else
             log-info "Repository README unchanged."
        fi
    fi
}


# Main function
main() {
    echo ""
    log-info "Starting AUR package build process"
    
    # Validate requirements
    if ! command -v yq &> /dev/null; then
        log-info "yq not found, installing..."
        sudo pacman -S --noconfirm go-yq || {
            log-error "Failed to install yq"
            exit 1
        }
    fi
    
    if ! command -v makepkg &> /dev/null; then
        log-error "makepkg is required but not installed (should be in base-devel)"
        exit 1
    fi
    
    if [[ ! -f "$PACKAGES_FILE" ]]; then
        log-error "Package file not found: $PACKAGES_FILE"
        exit 1
    fi
    
    # Create directories
    mkdir -p "${BUILD_DIR}/${ARCH}" "$AUR_CLONE_DIR"
    
    # Get number of packages
    local pkg_count
    pkg_count=$(yq '.packages | length' "$PACKAGES_FILE")
    log-info "Found ${pkg_count} packages in ${PACKAGES_FILE}"
    
    local built_count=0
    local skipped_count=0
    local failed_count=0
    
    # Process each package
    for ((i=0; i<pkg_count; i++)); do
        local pkg_name
        local force_build
        
        pkg_name=$(yq ".packages[$i].name" "$PACKAGES_FILE")
        force_build=$(yq ".packages[$i].force // false" "$PACKAGES_FILE")
        
        echo ""
        log-info "Processing package: ${pkg_name}"
        
        # Clone/update from AUR
        if ! clone-aur-package "$pkg_name"; then
            log-error "Failed to clone ${pkg_name}"
            ((failed_count++))
            continue
        fi
        
        local repo_version aur_version

        repo_version=$(get-repo-version "$pkg_name")
        aur_version=$(get-aur-version "${AUR_CLONE_DIR}/${pkg_name}")
        
        log-info "  Repo version: ${repo_version:-<not in repo>}"
        log-info "  AUR version:  ${aur_version}"
        
        # Determine if we need to build
        local needs_build=false
        
        if [[ -z "$repo_version" ]]; then
            log-info "  → Package not in repo, building..."
            needs_build=true
        elif [[ "$repo_version" != "$aur_version" ]]; then
            log-info "  → Version mismatch, building..."
            needs_build=true
        elif [[ "$force_build" == "true" ]]; then
            log-info "  → Force flag set, building..."
            needs_build=true
        else
            log-info "  → Already up-to-date, skipping"
            ((skipped_count++)) || true
        fi

        if [[ "$needs_build" == "true" ]]; then
            if build-package "$pkg_name"; then
                ((built_count++)) || true
            else
                ((failed_count++)) || true
            fi
            echo ""
        fi
    done
    
    # Update repo database if any packages were built
    if [[ $built_count -gt 0 ]]; then
        update-repo-database
    fi
    
    # Summary
    echo ""
    log-info "Build Summary:"
    log-info "  Built:   ${built_count}"
    log-info "  Skipped: ${skipped_count}"
    log-info "  Failed:  ${failed_count}"
    
    # Generate landing page
    generate-landing-page
    
    if [[ $failed_count -gt 0 ]]; then
        exit 1
    fi
}

main "$@"
